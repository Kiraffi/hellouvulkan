{
    "env": {
        "myDefaultIncludePath": [
            "${workspaceFolder}/**"
        ],
        "myCompilerPath": "/usr/local/bin/clang++"
    },
    "configurations": [
        {
            "name": "Linux",
            "intelliSenseMode": "linux-clang-x64",
            "includePath": [
                "${myDefaultIncludePath}"
            ],
            "defines": [],
            //"defines": [
            //    "FOO",
            //    "BAR=100"
            //],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "browse": {
                "path": [
                    "${workspaceFolder}",
                    "${workspaceFolder}/src",
                    "${workspaceFolder}/src/mylibs"
                ],
                "limitSymbolsToIncludedHeaders": false,
                "databaseFilename": ""
            },
            "configurationProvider": "ms-vscode.cmake-tools"
        }
    ],
    "version": 4
}